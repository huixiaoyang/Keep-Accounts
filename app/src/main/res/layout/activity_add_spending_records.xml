<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_weight="1"
        android:layout_height="0dp">

        <ImageButton
            android:id="@+id/btn_cancel"
            android:layout_width="30dp"
            android:layout_height="30dp"
            android:layout_alignBottom="@+id/btn_ok"
            android:layout_alignParentStart="true"
            android:layout_marginStart="11dp"
            android:background="@drawable/button_selector"
            android:scaleType="centerCrop"
            android:onClick="clk_cancel"
            android:src="@drawable/cancel" />
        <Button
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Income"
            android:layout_marginLeft="100dp"
            android:id="@+id/btn_income"
            style="@style/Base.Widget.AppCompat.Button.Borderless"
            android:onClick="clk_income"/>

        <ImageButton
            android:id="@+id/btn_ok"
            android:layout_width="30dp"
            android:layout_height="30dp"
            android:layout_alignParentRight="true"
            android:layout_marginRight="10dp"
            android:background="@drawable/button_selector"
            android:scaleType="centerCrop"
            android:onClick="clk_ok"
            android:src="@drawable/ok" />
        <Button
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_toRightOf="@+id/btn_income"
            android:text="Spending"
            android:id="@+id/btn_spending"
            android:background="@android:color/darker_gray"
            style="@style/Base.Widget.AppCompat.Button.Borderless" />
    </RelativeLayout>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_weight="2"
        android:layout_height="0dp">

        <ImageButton
            android:id="@+id/btn_selected"
            android:layout_width="75dp"
            android:layout_height="70dp"
            android:layout_alignParentStart="true"
            android:layout_centerVertical="true"
            android:layout_marginStart="12dp"
            android:contentDescription="food"
            style="@style/Base.Widget.AppCompat.Button.Borderless"
            android:scaleType="centerCrop"
            android:src="@drawable/food_sel" />
        <EditText
            android:id="@+id/et_money"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentEnd="true"
            android:singleLine="true"
            android:digits="1234567890."
            android:text=""
            android:layout_centerVertical="true"
            android:textColor="#000000"
            android:textSize="40sp" />
    </RelativeLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_weight="2"
        android:layout_height="0dp"
        android:orientation="horizontal">
        <ImageButton
            android:id="@+id/btn_food"
            android:layout_width="0dp"
            android:layout_height="70dp"
            android:layout_weight="1"
            android:scaleType="centerCrop"
            android:layout_margin="10dp"
            android:contentDescription="food"
            style="@style/Base.Widget.AppCompat.Button.Borderless"
            android:tag="0"
            android:onClick="clk_select"
            android:src="@drawable/food_sel" />
        <ImageButton
            android:id="@+id/btn_traffic"
            android:layout_width="0dp"
            android:layout_height="70dp"
            android:layout_weight="1"
            android:layout_margin="10dp"
            android:scaleType="centerCrop"
            android:contentDescription="traffic"
            style="@style/Base.Widget.AppCompat.Button.Borderless"
            android:tag="1"
            android:onClick="clk_select"
            android:src="@drawable/traffic_unsel"/>
        <ImageButton
            android:id="@+id/btn_drink"
            android:layout_width="0dp"
            android:layout_height="70dp"
            android:layout_weight="1"
            android:layout_margin="10dp"
            android:scaleType="centerCrop"
            android:contentDescription="drink"
            style="@style/Base.Widget.AppCompat.Button.Borderless"
            android:tag="2"
            android:onClick="clk_select"
            android:src="@drawable/drink_unsel"/>
        <ImageButton
            android:id="@+id/btn_daily_necessities"
            android:layout_width="0dp"
            android:layout_height="70dp"
            android:layout_weight="1"
            android:layout_margin="10dp"
            android:scaleType="centerCrop"
            android:contentDescription="daily necessities"
            style="@style/Base.Widget.AppCompat.Button.Borderless"
            android:tag="3"
            android:onClick="clk_select"
            android:src="@drawable/daily_unsel"/>
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_weight="2"
        android:layout_height="0dp"
        android:orientation="horizontal">
        <ImageButton
            android:id="@+id/btn_cloth"
            android:layout_width="0dp"
            android:layout_height="70dp"
            android:layout_weight="1"
            android:layout_margin="10dp"
            android:scaleType="centerCrop"
            android:contentDescription="cloth"
            style="@style/Base.Widget.AppCompat.Button.Borderless"
            android:tag="4"
            android:onClick="clk_select"
            android:src="@drawable/cloth_unsel"/>
        <ImageButton
            android:id="@+id/btn_red_envelope"
            android:layout_width="0dp"
            android:layout_height="70dp"
            android:layout_weight="1"
            android:layout_margin="10dp"
            android:scaleType="centerCrop"
            android:contentDescription="red envelope"
            style="@style/Base.Widget.AppCompat.Button.Borderless"
            android:tag="5"
            android:onClick="clk_select"
            android:src="@drawable/red_envelope_unsel" />
        <ImageButton
            android:id="@+id/btn_phone_top_up"
            android:layout_width="0dp"
            android:layout_height="70dp"
            android:layout_weight="1"
            android:layout_margin="10dp"
            android:scaleType="centerCrop"
            android:contentDescription="phone top up"
            style="@style/Base.Widget.AppCompat.Button.Borderless"
            android:onClick="clk_select"
            android:tag="6"
            android:src="@drawable/top_up_unsel"/>

        <ImageButton
            android:id="@+id/btn_recreation"
            android:layout_width="0dp"
            android:layout_height="70dp"
            android:layout_margin="10dp"
            android:layout_weight="1"
            android:scaleType="centerCrop"
            android:contentDescription="recreation"
            style="@style/Base.Widget.AppCompat.Button.Borderless"
            android:onClick="clk_select"
            android:tag="7"
            android:src="@drawable/recreation_unsel"/>
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_weight="2"
        android:layout_height="0dp"
        android:orientation="horizontal">
        <ImageButton
            android:id="@+id/btn_treatment"
            android:layout_width="0dp"
            android:layout_height="70dp"
            android:layout_weight="1"
            android:layout_margin="10dp"
            android:scaleType="centerCrop"
            android:contentDescription="treatment"
            style="@style/Base.Widget.AppCompat.Button.Borderless"
            android:onClick="clk_select"
            android:tag="8"
            android:src="@drawable/treatment_unsel"/>
        <ImageButton
            android:id="@+id/btn_stationery"
            android:layout_width="0dp"
            android:layout_height="70dp"
            android:layout_weight="1"
            android:layout_margin="10dp"
            android:scaleType="centerCrop"
            android:contentDescription="stationery"
            style="@style/Base.Widget.AppCompat.Button.Borderless"
            android:onClick="clk_select"
            android:tag="9"
            android:src="@drawable/stationery_unsel"/>
        <ImageButton
            android:id="@+id/btn_book"
            android:layout_width="0dp"
            android:layout_height="70dp"
            android:layout_weight="1"
            android:layout_margin="10dp"
            android:scaleType="centerCrop"
            android:contentDescription="book"
            style="@style/Base.Widget.AppCompat.Button.Borderless"
            android:onClick="clk_select"
            android:tag="10"
            android:src="@drawable/book_unsel"/>
        <ImageButton
            android:id="@+id/btn_tution"
            android:layout_width="0dp"
            android:layout_height="70dp"
            android:layout_weight="1"
            android:layout_margin="10dp"
            android:scaleType="centerCrop"
            android:contentDescription="tution"
            style="@style/Base.Widget.AppCompat.Button.Borderless"
            android:onClick="clk_select"
            android:tag="11"
            android:src="@drawable/tuition_unsel" />
    </LinearLayout>


</LinearLayout>